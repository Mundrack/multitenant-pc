# ============================================
# NEXUS ENTERPRISE PLATFORM - Environment Variables
# ============================================

# ============================================
# SUPABASE
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https:/saddsa
NEXT_PUBLIC_SUPABASE_ANON_KEY=easdda
SUPABASE_SERVICE_ROLE_KEY=ghjjhg
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Nexus Enterprise
NODE_ENV=development

# ================================== ==========
# AUTHENTICATION
# ============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-random-secret-here

# ============================================
# EMAIL SERVICE
# ============================================
# Option 1: Resend (Recommended)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Option 2: SendGrid
# SENDGRID_API_KEY=SG.your_api_key_here
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# ENCRYPTION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# ============================================
# MONITORING & ANALYTICS
# ============================================
# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Vercel Analytics (Automatic if deployed on Vercel)
# No configuration needed

# ============================================
# RATE LIMITING & CACHING
# ============================================
# Upstash Redis (Optional but recommended)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ============================================
# FILE STORAGE
# ============================================
# Supabase Storage (Automatic with Supabase)
# Or configure external S3-compatible storage
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=nexus-uploads

# ============================================
# SUPER ADMIN (Initial Setup)
# ============================================
SUPER_ADMIN_EMAIL=admin@yourdomain.com
SUPER_ADMIN_PASSWORD=ChangeThisPassword123!

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_ANALYTICS=true
ENABLE_MESSAGING=true
ENABLE_WHITE_LABEL=false
ENABLE_API_ACCESS=false

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Set to 'true' to enable debug logs
DEBUG=false
NEXT_PUBLIC_DEBUG_MODE=false

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1
